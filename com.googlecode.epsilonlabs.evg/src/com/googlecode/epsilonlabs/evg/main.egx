import "util.eol";

rule GenClass2Visitor
	transform gc : GenClass {
	
	guard : gc.ecoreClass.instanceTypeName.isUndefined()
	
	template : "genClass2Visitor.egl"
	
	target : gc.getPackagePath() + "/" + gc.eCoreClass.name + "Visitor.java"
}

rule GenPackage2VisitorController
	transform gp : GenPackage {
	
	template : "genPackage2VisitorController.egl"
	
	target : gp.getPackagePath() + "/" + gp.name.ftuc() + "VisitorController.java"
}

rule GenPackage2DefaultVisitor
	transform gp : GenPackage {
	
	template : "genPackage2DefaultVisitor.egl"
	
	target : gp.getPackagePath() + "/" + gp.name.ftuc() + "DefaultVisitor.java"
}